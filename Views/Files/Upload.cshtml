@{
    ViewData["Title"] = "Upload File";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-user-management.css" />
}
<div class="upload-card">
    <h2>Upload Files</h2>

    <!-- Display Error Message -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@modelError.ErrorMessage</p>
            }
        </div>
    }

    <div class="alert alert-info">
        Max file size allowed per file: <strong>5 GB</strong><br />
        You can upload multiple files at once.
    </div>

    <form asp-action="Upload" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="file">Select Files:</label>
            <input type="file" class="form-control" id="file" name="files" multiple required />
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Upload</button>
            <a asp-action="MyFiles" class="btn btn-secondary">Back to My Files</a>
        </div>
    </form>
</div>